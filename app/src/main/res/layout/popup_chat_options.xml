<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/sidebar_bg"
    android:clipToPadding="false"
    android:orientation="vertical"
    android:padding="8dp">

    <!-- row -->
    <LinearLayout
        android:background="@drawable/sidebar_item_ripple"
        android:id="@+id/rowshare"
        android:layout_width="220dp"
        android:layout_height="44dp"
        android:gravity="center_vertical"
        android:paddingStart="12dp"
        android:paddingEnd="12dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/sidebar1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="Chia sẻ"
            android:textColor="@color/sidebar_text" />
    </LinearLayout>

    <LinearLayout
        android:background="@drawable/sidebar_item_ripple"
        android:id="@+id/rowstartgroup"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center_vertical"
        android:paddingStart="12dp"
        android:paddingEnd="12dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/sidebar1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="Bắt đầu đoạn chat nhóm"
            android:textColor="@color/sidebar_text" />
    </LinearLayout>

    <LinearLayout
        android:background="@drawable/sidebar_item_ripple"
        android:id="@+id/rowrename"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center_vertical"
        android:paddingStart="12dp"
        android:paddingEnd="12dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/sidebar1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="Đổi tên"
            android:textColor="@color/sidebar_text" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:background="@color/text_secondary" />

    <LinearLayout
        android:background="@drawable/sidebar_item_ripple"
        android:id="@+id/rowarchive"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center_vertical"
        android:paddingStart="12dp"
        android:paddingEnd="12dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/sidebar1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="Lưu trữ"
            android:textColor="@color/sidebar_text" />
    </LinearLayout>

    <LinearLayout
        android:background="@drawable/sidebar_item_ripple"
        android:id="@+id/rowdelete"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center_vertical"
        android:paddingStart="12dp"
        android:paddingEnd="12dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/sidebar1"
            android:tint="#FF6B6B" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="Xóa"
            android:textColor="@color/text_primary" />
    </LinearLayout>
</LinearLayout>
