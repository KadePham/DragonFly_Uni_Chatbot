<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sidebar_bg"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- ================= HEADER ================= -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btnLogo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/sidebar_item_ripple"
            android:src="@drawable/back" />
    </LinearLayout>

    <!-- ================ SCROLL ZONE ================ -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <!-- CHỈ 1 CHILD DUY NHẤT -->
        <LinearLayout
            android:id="@+id/containerScroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- ================= MENU ================= -->

            <LinearLayout
                android:id="@+id/itemNewChat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/sidebar_item_ripple"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="12dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                      />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="New chat"
                    android:textColor="@color/sidebar_text"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/item_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/sidebar_item_ripple"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="12dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                      />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="Search chats"
                    android:textColor="@color/sidebar_text"
                    android:textSize="20sp" />
            </LinearLayout>









            <!-- ======= TITLE ======= -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your chats"
                android:textSize="18sp"
                android:textColor="@color/text_secondary"
                android:paddingTop="20dp"
                android:paddingBottom="8dp" />

            <!-- ======= CHAT HISTORY LIST ======= -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvChatList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                tools:listitem="@layout/item_chat_history" />

        </LinearLayout>
    </ScrollView>


    <!-- =============== FOOTER =============== -->
    <LinearLayout
        android:id="@+id/navProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:background="@drawable/sidebar_item_ripple"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/smile" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nameProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nguyen Anh Tu"
                android:textColor="@color/sidebar_text"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/subcription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Plus"
                android:textColor="@color/text_secondary"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
